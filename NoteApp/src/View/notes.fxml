<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="Controller.NotesController"
      spacing="10">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <TextField fx:id="titleField" promptText="Note Title" />
    <TextArea fx:id="contentArea" promptText="Note Content" prefHeight="150" />
    <Button text="Add Note" onAction="#addNote" />
    <ListView fx:id="notesList" prefHeight="200" />
</VBox>
